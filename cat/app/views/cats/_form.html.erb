<% if edit %>
    <%action = cat_url(cat)%>
    <%button_text = 'Edit this info'%>
<% else %>
    <%action = cats_url%>
    <%button_text = 'Submit this cat'%>
<% end %>

<form action="<%= action %>", method="POST">
    <% if edit %>
        <input type="hidden" name="_method" value="PATCH"> 
    <% end %>
    
    <label for="cat_name">Name: </label>
    <input id="cat_name" type="text" name= "cat[name]" value = "<%= cat.name %>">
        <br>
    <label for="cat_birth_date">Birthdate: </label>
    <input id="cat_birth_date" type="text" name= "cat[birth_date]" value = "<%= cat.birth_date %>">
        <br>
    <label for = "cat_sex">Sex: </label>
    <select id = "cat_sex" name = "cat[sex]">
        <option disabled <%= cat.sex ? "" : "selected" %>>-- Please Select --</option>
        <option value = "M" <%= cat.sex == "M" ? "selected" : "" %>>M</option>
        <option value = "F" <%= cat.sex == "F" ? "selected" : "" %>>F</option>
    </select>
        <br>
    <label for="cat_color">Color: </label>
    <input id="cat_color" type="text" name= "cat[color]" value = "<%= cat.color %>">
        <br>
    <label for="cat_desc">Description: </label>
    <input id="cat_desc" type="text" name= "cat[description]" value = "<%= cat.description %>">
        <br>
    <input type = "submit" value ="<%= button_text %>">
</form>


